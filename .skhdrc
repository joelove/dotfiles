# Escape 0x35
# Tilde  0x32

## Full screen 
ctrl + alt + cmd - space : yabai -m window --grid 1:1:0:0:1:1
ctrl + alt + cmd - 0x35 : yabai -m window --grid 1:1:0:0:1:1

## Resize window to left half
ctrl + alt + cmd - x : yabai -m window --grid 1:2:0:0:1:1

## Resize window to right half
ctrl + alt + cmd - c : yabai -m window --grid 1:2:1:0:1:1

## Resize window to left two-thirds
ctrl + cmd - 0x32 : yabai -m window --grid 1:3:0:0:2:1
ctrl + shift + alt - 0x32 : yabai -m window --grid 1:3:0:0:2:1

## Resize window to right two-thirds
ctrl + cmd - z : yabai -m window --grid 1:3:1:0:2:1
ctrl + shift + alt - z : yabai -m window --grid 1:3:1:0:2:1

## Resize window to left third
ctrl + cmd + shift - 0x32 : yabai -m window --grid 1:3:0:0:1:1
ctrl + alt + cmd + shift - 0x32 : yabai -m window --grid 1:3:0:0:1:1

## Resize window to right third
ctrl + cmd + shift - z : yabai -m window --grid 1:3:2:0:1:1
ctrl + alt + cmd + shift - z : yabai -m window --grid 1:3:2:0:1:1

## Move window to previous display
ctrl + alt - x : yabai -m window --grid 3:3:1:1:1:1 && yabai -m window --display prev && yabai -m display --focus prev && yabai -m window --grid 1:1:0:0:1:1

## Move window to next display
ctrl + alt - c : yabai -m window --grid 3:3:1:1:1:1 && yabai -m window --display next && yabai -m display --focus next && yabai -m window --grid 1:1:0:0:1:1

## Switch space on display with focused window
cmd + alt - tab : yabai -m space --focus $(yabai -m query --displays --display | jq -er '.spaces[0]') || yabai -m space --focus $(yabai -m query --displays --display | jq -er '.spaces[1]') 

## Switch space on display with mouse cursor
cmd + alt + shift - tab : yabai -m display --focus mouse && yabai -m space --focus $(yabai -m query --displays --display mouse | jq -er '.spaces[0]') || yabai -m space --focus $(yabai -m query --displays --display mouse | jq -er '.spaces[1]')

## Dual mac default shortcuts
cmd - 0x35 : skhd -k "cmd - space"

## Direct app launch
hyper - 1 : open ~/Projects/dotfiles/qmk/current-preview.png
hyper - 2 : open -a "iTerm"
hyper - 3 : open -a "Visual Studio Code"
hyper - 4 : open -a "Google Chrome"
